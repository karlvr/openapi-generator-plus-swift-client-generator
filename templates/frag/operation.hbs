    {{/if}}
    {{/ifneq}}
{{/each}}
{{#if securityRequirements}}
    case 401:
        if allowsReauth, let securityClient = configuration.securityClient {
            var didAuthenticate = false
            var lastError: Error?
            {{#each securityRequirements.requirements}}
            if !didAuthenticate {
